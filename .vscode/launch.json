{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
    ],
    "configurations": [
        {
            "name": "Attach to nestjs",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "type": "node",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nx",
                "serve",
                "api"
            ],
            "console": "integratedTerminal",
            "env": {
                "TS_NODE_IGNORE": "false",
                "TS_NODE_PROJECT": "${workspaceFolder}/api/tsconfig.json"
            },
            "sourceMaps": true,
        },
        {
            "name": "Attach to Api",
            "request": "attach",
            "cwd": "${workspaceFolder}/api",
            "type": "node",
            "port": 9229,
            "sourceMaps": true,
        },
        {
            "name": "Launch my-nest-project",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nx",
                "serve",
                "api"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/api"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Api Debug Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nx",
                "serve",
                "api"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/api"
        }
    ]
}